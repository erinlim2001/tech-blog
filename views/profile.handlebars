<div class="container profile"></div>
<header class="header text-center">{{currentUser.username}}'s Settings</header>
<div class="row">
    <div class="col-5"></div>
    {{#if currentUser.driver}}
    <div class="col-2">
        <div class="card settings">
            <div class="card-header text-center">
                <h3 class="card-title">Settings</h3>
            </div>
            <div class="card-body">
                <button class="btn" id="join-btn" onclick="window.location.href='driver'">Write a Post</button>
                <br>
                <button class="btn" id="logout">Log Out</button>
            </div>
        </div>
    </div>
</div>
{{else}}
<div class="col-2">
    <div class="card settings">
        <div class="card-header text-center">
            <h3 class="card-title">Settings</h3>
        </div>
        <div class="card-body">
            <button class="btn" id="logout">Log Out</button>
        </div>
    </div>
</div>
</div>
<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <form class="driver-form" id="driver-form">
            <h1 class="driverprompt text-center">Want to create a post?</h1>
            <div>
                <label for="insurance"></label>
                <input type="text" class="form-control" placeholder="First Name" id="provider">
            </div>
            <div>
                <label for="carmake"></label>
                <input type="text" class="form-control" placeholder="Last Name" id="make">
            </div>
            <div>
                <label for="model"></label>
                <input type="text" class="form-control" placeholder="Date of Birth" id="model">
            </div>
            <div>
                <label for="year"></label>
                <input type="text" class="form-control" placeholder="Reason for posting" id="year">
            </div>
            <div class="d-grid gap-3 col-2 mx-auto">
                <button type="submit" class="submit driver-form-btn" id="join-btn">Submit</button>
            </div>
        </form>
    </div>
    <div class="col-3">
    </div>
    {{/if}}
</div>
</div>
<input type="text" class="form-control display-none" value={{currentUser.username}} id="user">

<script src="js/profile.js"></script>