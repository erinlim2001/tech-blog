<div class="container dashboard">
  <div class="row auto-mx">
    <header class="header text-center">Welcome, {{currentUser.username}}.</header>
    <form class="driver-form">
      <h3 class="text-center">Create a Post</h3>
      <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
          <div class="input-group mb-3 col">
            <select class="form-control" placeholder="" id="pickup" aria-label="">
              {{#each locations as |location|}}
              <option value="{{location.name}}">{{location.name}}</option>
              {{/each}}
            </select>
            <span class="input-group-text"></span>
            <select class="form-control" placeholder="destination Location" id="destination" aria-label="destination">
              {{#each locations as |location|}}
              <option value="{{location.name}}">{{location.name}}</option>
              {{/each}}
            </select>
          </div>
          <br />
          <div class="row">
            <div class="col-4"></div>
            <div class="mb-3 col-4 mx-auto">
              <div class="input-group">
                {{!-- <span class="input-group-text">$</span> --}}
                <input type="number" min="0" class="form-control" id="price" placeholder="Post Number"
                  aria-label="Amount (to the nearest dollar)" />
                
              </div>
            </div>
            <div class="col-4"></div>
          </div>
          <div class="row">
            <div class="col-5"></div>
            <div class="col-2">
              <div class="input-group">
                <input type="text" class="form-control" placeholder="Number" id="num_seats" aria-label="Seats" />
              </div>
            </div>
          </div>
          <br />
          <div class="mb-3 col">
            <label for="exampleFormControlTextarea1" class="form-label">Content:</label>
            <textarea class="form-control" id="description" placeholder="Write here..."
              rows="3"></textarea>
          </div>
          <br />
          <div class="d-grid gap-2 col-2 mx-auto">
            <button type="submit" class="btn btn-danger" id="join-btn">Create</button>
          </div>
        </div>
        <div class="col-2"></div>
      </div>
    </form>
  </div>
  <div class="col-7 list-col mx-auto mt-5">
    <h2 class="text-center m-3">Your Posts</h2>
    {{#each currentUserRides as |ride|}}
    <div class="card">
      <div class="card-header text-center">

      </div>
      <div class="card-body text-center">
        <p class="ride-info">User: {{ride.driver_name}} - Post Number: {{ride.price}} - Number:
          {{ride.num_seats}}</p>
        <div class="form-floating">
          <textarea readonly='true' class="form-control" placeholder="No Description" id="floatingTextarea2"
            style="height: 100px">{{ride.description}}</textarea>
          <label for="floatingTextarea2">Description:</label>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  <input type="text" class="form-control display-none" value={{currentUser.username}} id="user">
</div>

<script src="js/driver-dashboard.js"></script>

<footer class="footer">
  <div class="content text-center">
    
  </div>
</footer>